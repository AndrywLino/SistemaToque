@model SistemaToque.Models.ToqueModel

@{
    ViewBag.Title = "Detalhes";
}

<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Sistema de Toque</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="~/plugins/fontawesome-free/css/all.min.css">
    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/dist/css/adminlte.css">
    <link href="~/dist/css/personalizado.css" rel="stylesheet" />
</head>

<body class="hold-transition sidebar-mini layout-fixed layout-navbar-fixed layout-footer-fixed sidebar-collapse">

    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Home/Toques" class="nav-link">Home</a>
                </li>
                <li class="nav-item d-none d-sm-inline-block">
                    <a href="~/Home/Toque" class="nav-link">Add um novo toque</a>
                </li>
            </ul>

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <!-- Botão para expandir a tela -->
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
                <!-- Botão para logout -->
                <li class="nav-item">
                    <a class="nav-link" href="#" role="button">
                        <i class="fa fa-sign-out-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-3">
            <!-- Brand Logo -->
            <a href="~/Home/Toques" class="brand-link">
                <img src="~/dist/img/logo.png" alt="Sistema de Toque" class="brand-image img-circle elevation-3" style="opacity: .8">
                <span class="brand-text font-weight-light">Sistema de Toque</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar user panel (optional) -->
                <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                    <div class="image">
                        <img src="~/dist/img/user.jpg" class="img-circle elevation-2" alt="User Image">
                    </div>
                    <div class="info">
                        <a href="#" class="d-block">Supervisor</a>
                    </div>
                </div>

                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                        <li class="nav-item">
                            <a href="~/Home/Toques" class="nav-link">
                                <i class="nav-icon fas fa-music"></i>
                                <p>
                                    Toques
                                </p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="~/Home/Toque" class="nav-link">
                                <i class="nav-icon fas fa-plus"></i>
                                <p>
                                    Add um novo toque
                                </p>
                            </a>
                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <!-- Content Wrapper. Contains page content -->
        <div class="content-wrapper">

            <!-- Content Header (Page header) -->
            <div class="content-header">
                <div class="container-fluid">
                    <div class="row mb-2">
                        <div class="col-sm-6">
                            <h1 class="m-0 txt-white">Detalhes</h1>
                        </div><!-- /.col -->
                        <div class="col-sm-6">
                            <ol class="breadcrumb float-sm-right">
                                <li class="breadcrumb-item"><a href="~/Home/Toques">Home</a></li>
                                <li class="breadcrumb-item active">Detalhes</li>
                            </ol>
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.container-fluid -->
            </div>
            <!-- /.content-header -->
            <!-- Main content -->
            <section class="content">
                <div class="container-fluid">

                    <div class="row">
                        <div class="col-md-12">
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="card-title"><b>Detalhes do toque</b></h5>
                                </div>
                                <!-- /.card-header -->

                                <div class="card-body">
                                    <div class="form-row">
                                        <div class="col-md-4 mb-3">
                                            <label>Descrição:</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Nome)" disabled>
                                        </div>
                                        <div class="col-md-8 mb-3">
                                            <label> &nbsp; </label>
                                            <div class="input-group">
                                                <div>
                                                    @Html.DisplayFor(model => model.Arquivo)
                                                </div>
                                                <audio controls>
                                                    <source src="~/Musicas/" type="audio/mp3">
                                                    Seu navegador não suporta a tag de áudio
                                                </audio>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-row">
                                        <div class="col-md-3 mb-3">
                                            <label>Segundos para início da música:</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.StartSegs)" disabled>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label>Hora de início do toque:</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.Hora)" disabled>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label>Dias da semana:</label>
                                            <textarea class="form-control" id="text-content" rows="3" disabled>@Html.DisplayFor(model => model.DiaSemana)</textarea>
                                        </div>
                                        <div class="col-md-3 mb-3">
                                            <label>Tipo de ensino selecionado:</label>
                                            <input type="text" class="form-control" value="@Html.DisplayFor(model => model.TxEnsino)" disabled>
                                        </div>
                                    </div>
                                    <!-- /.form-row -->
                                </div>
                                <!-- ./card-body -->
                            </div>
                            <!-- /.card -->
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                </div><!--/. container-fluid -->
            </section>
            <!-- /.content -->
        </div>
        <!-- /.content-wrapper -->
        <!-- Control Sidebar -->
        <aside class="control-sidebar control-sidebar-dark">
            <!-- Control sidebar content goes here -->
        </aside>
        <!-- /.control-sidebar -->
        <!-- Main Footer -->
        <footer class="main-footer">
            <strong>Copyright &copy; 1972 - 2021 <a href="https://ceinet.com.br">CEI</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 09.03.21 - AM - 1.0
            </div>
        </footer>
        <!-- /.Main Footer -->

    </div>
    <!-- ./wrapper -->
    <!-- REQUIRED SCRIPTS -->
    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap -->
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/dist/js/adminlte.js"></script>

    <!-- PAGE ~/plugins -->
    <!-- jQuery Mapael -->
    <script src="~/plugins/jquery-mousewheel/jquery.mousewheel.js"></script>
    <script src="~/plugins/raphael/raphael.min.js"></script>
    <script src="~/plugins/jquery-mapael/jquery.mapael.min.js"></script>
    <script src="~/plugins/jquery-mapael/maps/usa_states.min.js"></script>
    <!-- ChartJS -->
    <script src="~/plugins/chart.js/Chart.min.js"></script>

    <!-- AdminLTE for demo purposes -->
    <script src="~/dist/js/demo.js"></script>
    <!-- AdminLTE dashboard demo (This is only for demo purposes) -->
    <script src="~/dist/js/pages/dashboard2.js"></script>

    @*Selecionar valor atual no select e radioButton*@
    <script>
        selectElement('StartSegs', '@ViewBag.StartSegs')
        checkRadio()

        function selectElement(id, valueToSelect) {
            let element = document.getElementById(id);
            element.value = valueToSelect;
        }

        function checkRadio() {
            if (@ViewBag.Ensino == 1) {
                document.getElementById("radioFund1").checked = true;
            }
            if (@ViewBag.Ensino == 2) {
                document.getElementById("radioFund2").checked = true;
            }
            if (@ViewBag.Ensino == 3) {
                document.getElementById("radioEM").checked = true;
            }
        }
    </script>

    @*Recebendo valor do Id do arquivo*@
    <script>
        var arquivo = document.querySelector('#arquivo');
        alert(arquivo);
    </script>

</body>
</html>