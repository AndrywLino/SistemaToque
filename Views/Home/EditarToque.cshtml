                                <div class="card-header">
                                    <h5 class="card-title"><b>Configurações do toque</b></h5>
                                </div>
                                <!-- /.card-header -->
                                @using (Html.BeginForm("EditarToque", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    <div hidden>
                                        @Html.TextBoxFor(model => model.Arquivo)
                                        @Html.TextBoxFor(model => model.IsAtivo)
                                    </div>

                                    <div class="card-body">
                                        <div class="form-row">
                                            <div class="col-md-3 mb-3">
                                                <label>Descrição:</label>
                                                @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @type = "text", @class = "form-control" } })
                                            </div>
                                            <div class="col-md-5 mb-3">
                                                <label>Arquivo:</label>
                                                <div class="input-group">
                                                    <div class="custom-file">
