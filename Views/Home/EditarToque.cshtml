                                                        <label class="custom-file-label" for="file">Escolher arquivo</label>
                                                    </div>

                                                    &nbsp;&nbsp;&nbsp;

                                                    <button class="btn btn-primary" onclick="upload()" id="uploadBtn" name="uploadBtn" type="button">Upload</button>
                                                </div>
                                            </div>
                                            <div class="col-md-4 mb-3">
                                                <label>&nbsp;</label>
                                                <div id="song"></div>
                                            </div>
                                        </div>
                                        <div class="form-row">
                                            <div class="col-md-4 mb-4">
                                                <label>Hora de início do toque:</label>
                                                @Html.EditorFor(model => model.Hora, new { htmlAttributes = new { @type = "Time", @class = "form-control", @step = "1" } })
                                            </div>
                                            <div class="col-md-4 mb-4">
                                                <label>Dias da semana:</label>
                                                <div class="row">
                                                    <div class="col-6">
                                                        <div class="form-check">
                                                            @Html.EditorFor(model => model.IsSegunda, new { htmlAttributes = new { @type = "checkbox", @class = "form-check-input" } })
                                                            <label class="form-check-label" for="cb_1">
                                                                Segunda
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            @Html.EditorFor(model => model.IsTerca, new { htmlAttributes = new { @type = "checkbox", @class = "form-check-input" } })
                                                            <label class="form-check-label" for="cb_2">
                                                                Terça
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            @Html.EditorFor(model => model.IsQuarta, new { htmlAttributes = new { @type = "checkbox", @class = "form-check-input" } })
                                                            <label class="form-check-label" for="cb_3">
                                                                Quarta
                                                            </label>
                                                        </div>
                                                        <div class="form-check">
                                                            @Html.EditorFor(model => model.IsQuinta, new { htmlAttributes = new { @type = "checkbox", @class = "form-check-input" } })
                                                            <label class="form-check-label" for="cb_4">
                                                                Quinta
                                                            </label>
                                                        </div>
                                                    </div>
                                                    <div class="col-6">
                                                        <div class="form-check">
                                                            @Html.EditorFor(model => model.IsSexta, new { htmlAttributes = new { @type = "checkbox", @class = "form-check-input" } })
