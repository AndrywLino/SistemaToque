    @*Nome do arquivo sendo mostrado na seleção da música*@
    <script>
        $(".custom-file-input").on("change", function () {
            var fileName = $(this).val().split("\\").pop();
            $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
        });
    </script>

    @* Script Upload arquivo de áudio *@
    <script>
        const upload = () => {
            var url;
            var file = document.querySelector("#file").files[0];
            var reader = new FileReader();
            reader.onload = function (evt) {
                url = evt.target.result;
                console.log(url);
                var sound = document.createElement("audio");
                var link = document.createElement("source");
                sound.id = "audio-player";
                sound.controls = "controls";
                link.src = url;
                sound.type = "audio/mpeg";
                sound.appendChild(link);
                document.getElementById("song").appendChild(sound);
            };
            reader.readAsDataURL(file);
            uploadBtn.setAttribute('disabled', 'disabled');
        };
    </script>

    @*Selecionar valor atual no select e radioButton*@
    <script>
        selectElement('StartSegs', '@ViewBag.StartSegs')
        checkRadio()

        function selectElement(id, valueToSelect) {
            let element = document.getElementById(id);
            element.value = valueToSelect;
        }

        function checkRadio() {
            if (@ViewBag.Ensino == 1) {
                document.getElementById("radioFund1").checked = true;
            }
            if (@ViewBag.Ensino == 2) {
                document.getElementById("radioFund2").checked = true;
            }
            if (@ViewBag.Ensino == 3) {
                document.getElementById("radioEM").checked = true;
            }
        }
    </script>

    @* Script validação checkboxs *@
    <script type="text/javascript">
        function validate() {
            if ((document.getElementById('IsSegunda').checked) ||
                (document.getElementById('IsTerca').checked) ||
                (document.getElementById('IsQuarta').checked) ||
                (document.getElementById('IsQuinta').checked) ||
                (document.getElementById('IsSexta').checked) ||
                (document.getElementById('IsSabado').checked) ||
                (document.getElementById('IsDomingo').checked)) {
            } else {
                alert("Selecione pelo menos um dia da semana para criar o seu novo toque");
            }
        }
    </script>

